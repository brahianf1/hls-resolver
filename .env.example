# .env.example
# Configuración del Servidor
PORT=
HOST=
NODE_ENV=

# ==============================================================================
# !! IMPORTANTE: CAMBIA ESTOS VALORES ANTES DE DESPLEGAR !!
# Utiliza un generador de contraseñas o el comando `openssl rand -hex 32` para crear claves seguras.
# ==============================================================================
API_KEY=
SESSION_SECRET=

# ==============================================================================
# !! CONFIGURACIÓN DE SEGURIDAD !!
# Reemplaza 'https://tu-dominio.com' con el dominio desde donde se harán las peticiones.
# Si son múltiples dominios, sepáralos por comas: https://dominio1.com,https://dominio2.com
# ==============================================================================
CORS_ORIGINS=
ALLOWLIST_HOSTS=

# Configuración del Navegador
PUPPETEER_HEADLESS=
NAV_TIMEOUT_MS=
MAX_WAIT_MS=
USER_AGENT=
HTTP_PROXY=

# Pool de Navegadores
MAX_CONCURRENT_PAGES=
BROWSER_POOL_SIZE=

# Logging
LOG_LEVEL=

# Rate Limiting
RATE_LIMIT_MAX=
RATE_LIMIT_WINDOW_MS=