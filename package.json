{
  "name": "stream-resolver",
  "version": "1.0.0",
  "description": "Servicio headless para resolver URLs de streams HLS",
  "main": "dist/server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"tsc --watch\" \"node --watch --watch-preserve-output dist/server/index.js\"",
    "build": "tsc",
    "start": "node dist/server/index.js",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest --config jest.config.cjs",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:unit": "jest --config jest.config.cjs --roots test/unit",
    "test:integration": "jest --config jest.config.cjs --roots test/integration",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "hls",
    "stream",
    "resolver",
    "headless",
    "m3u8"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@fastify/cors": "^11.1.0",
    "@fastify/swagger": "^9.5.1",
    "@fastify/swagger-ui": "^5.2.3",
    "axios": "^1.12.2",
    "crawlee": "^3.6.2",
    "crypto": "^1.0.1",
    "dotenv": "^17.2.2",
    "fastify": "^5.6.0",
    "fastify-type-provider-zod": "^6.0.0",
    "p-limit": "^5.0.0",
    "pino": "^8.16.1",
    "pino-http": "^8.5.0",
    "prom-client": "^15.1.0",
    "puppeteer": "^21.5.2",
    "puppeteer-extra": "^3.3.6",
    "puppeteer-extra-plugin-stealth": "^2.11.2",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.10",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "concurrently": "^9.2.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.0.3",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "overrides": {
    "tar-fs": "3.0.9",
    "ws": "8.17.1"
  }
}
